# Increase Bash history size. Allow 32³ entries; the default is 501.
export HISTSIZE='32768';
export HISTFILESIZE="${HISTSIZE}";
# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL='ignoreboth';
shopt -s histappend
PROMPT_COMMAND='history -a'
shopt -s cdspell
export HISTCONTROL="ignoredups"
export HISTIGNORE="&:ls:[bf]g:exit:pwd:ls:cd"
shopt -s cmdhist

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}";

# Don’t clear the screen after quitting a manual page.
export MANPAGER='less -X';

# Always enable colored `grep` output.
#export GREP_OPTIONS='--color=auto';
export PATH="/usr/local/sbin:$PATH"

prepend_path() {
  export PATH="$1:${PATH}"
  }

export TERM=xterm-256color
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagacad

# editors
export EDITOR=vi # see ~/bin
export ALTERNATE_EDITOR=vi

# setup ~/bin
prepend_path "${HOME}/bin"

# add .local/bin to path
#~/.local/bin
prepend_path "${HOME}/.local/bin"


fasd_cache="$HOME/.fasd-init-bash"
if [ "$(command -v fasd)" -nt "$fasd_cache" -o ! -s "$fasd_cache" ]; then
  fasd --init posix-alias bash-hook bash-ccomp bash-ccomp-install >| "$fasd_cache"
fi
source "$fasd_cache"
unset fasd_cache

# GPG
if [ -f "${HOME}/.gpg-agent-info" ]; then
    . "${HOME}/.gpg-agent-info"
    export GPG_AGENT_INFO
    export SSH_AUTH_SOCK
fi
GPG_TTY=$(tty)
export GPG_TTY


# add this configuration to ~/.bashrc
export HH_CONFIG=hicolor         # get more colors
shopt -s histappend              # append new history items to .bash_history
export HISTCONTROL=ignorespace   # leading space hides commands from history
export HISTFILESIZE=10000        # increase history file size (default is 500)
export HISTSIZE=${HISTFILESIZE}  # increase history size (default is 500)
export PROMPT_COMMAND="history -a; history -n; ${PROMPT_COMMAND}"   # mem/file sync

[[ $- = *i* ]] && source "$HOME/.liquidprompt/liquidprompt"
        
if [ -d "$HOME/.node_modules_global" ];then
  export PATH="$HOME/.node_modules_global/bin:$PATH"
fi

if [ -d "$HOME/emacs-26.3/bin" ];then
  export PATH="$HOME/emacs-26.3/bin:$PATH"
fi


export NNN_OPTS='dRFHoex'
